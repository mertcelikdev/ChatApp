@model User

@{
    ViewData["Title"] = "Profil Ayarlarƒ±";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary: #7c3aed;
            --secondary: #a855f7;
            --accent: #ec4899;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --surface: #1f2937;
            --surface-light: #374151;
            --surface-lighter: #4b5563;
            --surface-darker: #111827;
            --text-primary: #f9fafb;
            --text-secondary: #d1d5db;
            --text-muted: #9ca3af;
            --text-light: #ffffff;
            --border: #4b5563;
            --font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: var(--surface-darker);
            font-family: var(--font-family);
            min-height: 100vh;
            margin: 0;
        }

        .profile-container {
            min-height: 100vh;
            padding: 20px;
        }

        .profile-header {
            background: linear-gradient(135deg, var(--primary), var(--accent));
            color: var(--text-light);
            border-radius: 20px 20px 0 0;
            padding: 40px;
            text-align: center;
            position: relative;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid rgba(255, 255, 255, 0.3);
            object-fit: cover;
            margin-bottom: 20px;
            transition: transform 0.3s ease;
        }

        .profile-avatar:hover {
            transform: scale(1.05);
        }

        .profile-body {
            background: var(--surface);
            border-radius: 0 0 20px 20px;
            padding: 40px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }

        .form-control, .form-select {
            background: var(--surface-light);
            border: 1px solid var(--border);
            color: var(--text-primary);
            border-radius: 12px;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            background: var(--surface-lighter);
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.25);
            color: var(--text-primary);
        }

        .btn {
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border: none;
            color: var(--text-light);
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--secondary), var(--primary));
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.3);
        }

        .btn-outline-primary {
            border: 2px solid var(--primary);
            color: var(--primary);
            background: transparent;
        }

        .btn-outline-primary:hover {
            background: var(--primary);
            color: var(--text-light);
            transform: translateY(-2px);
        }

        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: var(--text-light);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            color: var(--text-light);
            transform: scale(1.1);
        }

        .upload-area {
            position: relative;
            display: inline-block;
        }

        .upload-overlay {
            position: absolute;
            bottom: 0;
            right: 0;
            background: var(--primary);
            color: var(--text-light);
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 3px solid white;
        }

        .upload-overlay:hover {
            background: var(--secondary);
            transform: scale(1.1);
        }

        .char-count {
            color: var(--text-muted);
            font-size: 0.875rem;
            text-align: right;
            margin-top: 5px;
        }

        @@media (max-width: 768px) {
            .profile-container {
                padding: 10px;
            }
            
            .profile-header, .profile-body {
                padding: 20px;
            }
            
            .profile-avatar {
                width: 80px;
                height: 80px;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid profile-container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="card border-0 shadow-lg" style="background: transparent;">
                    
                    <!-- Profile Header -->
                    <div class="profile-header">
                        <a href="/Chat" class="back-btn">
                            ‚Üê
                        </a>
                        
                        <div class="upload-area">
                            <img src="@(Model?.ProfileImageUrl ?? "/images/default-avatar.png")" 
                                 alt="Profil Fotoƒürafƒ±" 
                                 class="profile-avatar" 
                                 id="profileImage">
                            <div class="upload-overlay" onclick="document.getElementById('imageInput').click()">
                                üì∑
                            </div>
                            <input type="file" id="imageInput" accept="image/*" style="display: none;">
                        </div>
                        
                        <h2 class="mb-2">@(Model?.Username ?? "Kullanƒ±cƒ±")</h2>
                        <p class="mb-0 fs-5">Profil Ayarlarƒ±</p>
                    </div>

                    <!-- Profile Body -->
                    <div class="profile-body">
                        <form id="profileForm" method="post" action="/Profile/UpdateProfile">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" id="countryId" name="CountryId" value="@Model?.CountryId" />
                            <input type="hidden" id="cityId" name="CityId" value="@Model?.CityId" />
                            
                            <!-- Username -->
                            <div class="form-group">
                                <label class="form-label">
                                    üë§ Kullanƒ±cƒ± Adƒ±
                                </label>
                                <input type="text" class="form-control" asp-for="Username" 
                                       placeholder="Kullanƒ±cƒ± adƒ±nƒ±zƒ± girin" required>
                                <small class="text-muted">Bu ad diƒüer kullanƒ±cƒ±lara g√∂r√ºn√ºr</small>
                            </div>

                            <!-- Display Name -->
                            <div class="form-group">
                                <label class="form-label">
                                    ‚ú® G√∂r√ºnen Ad
                                </label>
                                <input type="text" class="form-control" asp-for="DisplayName" 
                                       placeholder="G√∂r√ºnen adƒ±nƒ±zƒ± girin">
                                <small class="text-muted">Bu ad profil ve mesajlarƒ±nƒ±zda g√∂r√ºn√ºr (opsiyonel)</small>
                            </div>

                            <!-- Email -->
                            <div class="form-group">
                                <label class="form-label">
                                    üìß E-posta
                                </label>
                                <input type="email" class="form-control" asp-for="Email" 
                                       placeholder="E-posta adresinizi girin">
                                <small class="text-muted">Hesabƒ±nƒ±zla ili≈ükili e-posta adresi</small>
                            </div>

                            <!-- Bio -->
                            <div class="form-group">
                                <label class="form-label">
                                    üìù Hakkƒ±mda
                                </label>
                                <textarea class="form-control" asp-for="Bio" id="bio" 
                                          placeholder="Kendinizden bahsedin..." 
                                          rows="3" maxlength="500"></textarea>
                                <div class="char-count">
                                    <span id="bioCount">@(Model?.Bio?.Length ?? 0)</span>/500 karakter
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="form-group">
                                <label class="form-label">
                                    üìç Konum
                                </label>
                                <div class="location-input-group position-relative">
                                    <input type="text" class="form-control" asp-for="Location" id="location"
                                           placeholder="Konumunuzu se√ßin..." readonly style="padding-right: 60px;">
                                    <button type="button" class="btn btn-primary btn-sm position-absolute" 
                                            style="right: 5px; top: 50%; transform: translateY(-50%);"
                                            id="selectLocationBtn">
                                        Se√ß
                                    </button>
                                </div>
                                <small class="text-muted">Diƒüer kullanƒ±cƒ±lara g√∂sterilecek konum</small>
                            </div>

                            <!-- User Status -->
                            <div class="form-group">
                                <label class="form-label">
                                    üü¢ Durum
                                </label>
                                <select class="form-select" asp-for="UserStatus" id="userStatus">
                                    <option value="Online">üü¢ √áevrimi√ßi</option>
                                    <option value="Away">üü° Uzakta</option>
                                    <option value="Busy">üî¥ Me≈ügul</option>
                                    <option value="Invisible">‚ö´ G√∂r√ºnmez</option>
                                </select>
                                <small class="text-muted">Diƒüer kullanƒ±cƒ±lara g√∂sterilecek durum</small>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex gap-3 justify-content-end">
                                <button type="button" class="btn btn-outline-primary" onclick="history.back()">
                                    ‚Ü©Ô∏è Geri
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    üíæ Kaydet
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
        </div>
    </div>
</div>

<!-- Location Selection Modal -->
<div class="modal fade" id="locationModal" tabindex="-1" aria-labelledby="locationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="locationModalLabel">Konum Se√ß</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="countrySelect" class="form-label">√úlke</label>
                    <select id="countrySelect" class="form-select">
                        <option value="">√úlke se√ßin...</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="citySelect" class="form-label">≈ûehir</label>
                    <select id="citySelect" class="form-select" disabled>
                        <option value="">√ñnce √ºlke se√ßin...</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ƒ∞ptal</button>
                <button type="button" id="saveLocationBtn" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const selectLocationBtn = document.getElementById('selectLocationBtn');
    const locationModal = new bootstrap.Modal(document.getElementById('locationModal'));
    const countrySelect = document.getElementById('countrySelect');
    const citySelect = document.getElementById('citySelect');
    const saveLocationBtn = document.getElementById('saveLocationBtn');
    const locationDisplayInput = document.getElementById('location');
    const countryIdInput = document.getElementById('countryId');
    const cityIdInput = document.getElementById('cityId');
    let selectedCountryId = null;
    let selectedCityId = null;

    // Modal a√ßma
    selectLocationBtn.addEventListener('click', function() {
        locationModal.show();
        loadCountries();
    });

    // √úlkeleri y√ºkle
    function loadCountries() {
        fetch('/Profile/GetWorldCountries')
            .then(response => response.json())
            .then(result => {
                countrySelect.innerHTML = '<option value="">√úlke se√ßin...</option>';
                if (result.success && result.data) {
                    result.data.forEach(country => {
                        const option = document.createElement('option');
                        option.value = country.id;
                        option.textContent = country.name;
                        countrySelect.appendChild(option);
                    });
                }
            })
            .catch(error => console.error('√úlkeler y√ºklenemedi:', error));
    }

    // √úlke se√ßimi deƒüi≈ütiƒüinde ≈üehirleri y√ºkle
    countrySelect.addEventListener('change', function() {
        selectedCountryId = this.value;
        citySelect.disabled = !selectedCountryId;
        
        if (selectedCountryId) {
            loadCities(selectedCountryId);
        } else {
            citySelect.innerHTML = '<option value="">√ñnce √ºlke se√ßin...</option>';
            selectedCityId = null;
        }
    });

    // ≈ûehirleri y√ºkle
    function loadCities(countryId) {
        fetch(`/Profile/GetWorldCities?countryId=${countryId}`)
            .then(response => response.json())
            .then(result => {
                citySelect.innerHTML = '<option value="">≈ûehir se√ßin...</option>';
                if (result.success && result.data) {
                    result.data.forEach(city => {
                        const option = document.createElement('option');
                        option.value = city.id;
                        option.textContent = city.name;
                        citySelect.appendChild(option);
                    });
                }
            })
            .catch(error => console.error('≈ûehirler y√ºklenemedi:', error));
    }

    // ≈ûehir se√ßimi
    citySelect.addEventListener('change', function() {
        selectedCityId = this.value;
    });

    // Konumu kaydet
    saveLocationBtn.addEventListener('click', function() {
        if (selectedCountryId && selectedCityId) {
            const countryText = countrySelect.options[countrySelect.selectedIndex].text;
            const cityText = citySelect.options[citySelect.selectedIndex].text;
            
            locationDisplayInput.value = `${cityText}, ${countryText}`;
            countryIdInput.value = selectedCountryId;
            cityIdInput.value = selectedCityId;
            
            locationModal.hide();
        } else {
            alert('L√ºtfen √ºlke ve ≈üehir se√ßin.');
        }
    });
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Bio karakter sayacƒ±
            const bioInput = document.getElementById('bio');
            if (bioInput) {
                bioInput.addEventListener('input', function() {
                    const count = this.value.length;
                    const bioCountEl = document.getElementById('bioCount');
                    if (bioCountEl) {
                        bioCountEl.textContent = count;
                    }
                });
            }

            // Profil fotoƒürafƒ± y√ºkleme
            const imageInput = document.getElementById('imageInput');
            if (imageInput) {
                imageInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (!file) return;

                    // Dosya boyutu kontrol√º (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('Dosya boyutu 5MB\'dan b√ºy√ºk olamaz');
                        return;
                    }

                    // Dosya t√ºr√º kontrol√º
                    if (!file.type.startsWith('image/')) {
                        alert('Sadece resim dosyalarƒ± y√ºklenebilir');
                        return;
                    }

                    uploadProfileImage(file);
                });
            }

            // Form g√∂nderimi
            const profileForm = document.getElementById('profileForm');
            if (profileForm) {
                profileForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const formData = new FormData(this);
                    
                    fetch('/Profile/UpdateProfile', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showToast('Profil ba≈üarƒ±yla g√ºncellendi!', 'success');
                        } else {
                            showToast('Profil g√ºncellenirken hata olu≈ütu: ' + data.message, 'danger');
                        }
                    })
                    .catch(error => {
                        showToast('Beklenmeyen bir hata olu≈ütu', 'danger');
                        console.error('Error:', error);
                    });
                });
            }
        });

        // Profil fotoƒürafƒ± y√ºkleme
        function uploadProfileImage(file) {
            const formData = new FormData();
            formData.append('profileImage', file);

            fetch('/Profile/UploadProfileImage', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('profileImage').src = data.imageUrl;
                    showToast('Profil fotoƒürafƒ± ba≈üarƒ±yla g√ºncellendi!', 'success');
                } else {
                    showToast('Fotoƒüraf y√ºklenirken hata olu≈ütu: ' + data.message, 'danger');
                }
            })
            .catch(error => {
                showToast('Beklenmeyen bir hata olu≈ütu', 'danger');
                console.error('Error:', error);
            });
        }

        // Toast bildirimi g√∂ster
        function showToast(message, type) {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type} position-fixed`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            toast.innerHTML = `
                <button type="button" class="btn-close" aria-label="Close"></button>
                ${message}
            `;
            document.body.appendChild(toast);
            
            // Close button functionality
            toast.querySelector('.btn-close').addEventListener('click', () => {
                toast.remove();
            });
            
            // Auto remove after 3 seconds
            setTimeout(() => {
                if (toast.parentNode) toast.remove();
            }, 3000);
        }
    </script>
</body>
</html>
